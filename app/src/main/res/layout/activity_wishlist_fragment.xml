<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".wishlist.WishlistFragment">

    <!-- Everything scrolls together -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="16dp"
            android:paddingBottom="16dp">

            <!-- Header (now scrolls) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="56dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/btnBack"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:src="@drawable/backicon"/>

                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Wishlist"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/open_sans_bold"/>

                <ImageView
                    android:id="@+id/ivCartTop"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:src="@drawable/cart"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- ===== ITEM 1 ===== -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_price_box"
                    android:padding="12dp"
                    android:layout_marginTop="16dp">

                    <ImageView
                        android:layout_width="90dp"
                        android:layout_height="130dp"
                        android:background="@drawable/product_tile_bg"
                        android:scaleType="centerCrop"
                        android:src="@drawable/wishlist1" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingStart="12dp">

                        <TextView
                            android:id="@+id/tvName1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/open_sans_bold"
                            android:maxLines="2"
                            android:text="Hibiscus Tea â€“ Vibrant, Refreshing, and Naturally Caffeine-Free"
                            android:textColor="@color/black"
                            android:textSize="20sp"
                            app:layout_constraintEnd_toStartOf="@+id/btnRemove1"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <ImageView
                            android:id="@+id/btnRemove1"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_close"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"/>

                        <!-- price + sold + rating -->
                        <LinearLayout
                            android:id="@+id/rowPrice1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="8dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/tvName1">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="6dp"
                                android:fontFamily="@font/open_sans_bold"
                                android:text="$18"
                                android:textColor="@color/black"
                                android:textSize="24sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="12dp"
                                android:fontFamily="@font/open_sans_bold"
                                android:text="83 sold"
                                android:textColor="#8A000000"
                                android:textSize="16sp" />

                        </LinearLayout>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:fontFamily="@font/open_sans_bold"
                            android:text="Free shipping over $100"
                            android:textColor="#E53935"
                            android:textSize="16sp"
                            app:layout_constraintEnd_toStartOf="@id/btnAdd1"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/rowPrice1" />

                        <ImageView
                            android:id="@+id/btnAdd1"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/wishlistcarticon"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </LinearLayout>

                <!-- ===== ITEM 2 ===== -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_price_box"
                    android:padding="12dp"
                    android:layout_marginTop="16dp">

                    <ImageView
                        android:layout_width="90dp"
                        android:layout_height="130dp"
                        android:background="@drawable/product_tile_bg"
                        android:scaleType="centerCrop"
                        android:src="@drawable/wishlist2" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingStart="12dp">

                        <TextView
                            android:id="@+id/tvName2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Marigold (Daspethiya) Herbal Tea: A Sri Lankan Floral Infusion"
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            android:fontFamily="@font/open_sans_bold"
                            android:maxLines="2"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toStartOf="@+id/btnRemove2"
                            app:layout_constraintTop_toTopOf="parent"/>

                        <ImageView
                            android:id="@+id/btnRemove2"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_close"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"/>

                        <LinearLayout
                            android:id="@+id/rowPrice2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="8dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/tvName2">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="6dp"
                                android:fontFamily="@font/open_sans_bold"
                                android:text="$20"
                                android:textColor="@color/black"
                                android:textSize="24sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="12dp"
                                android:fontFamily="@font/open_sans_bold"
                                android:text="21 sold"
                                android:textColor="#8A000000"
                                android:textSize="16sp" />

                        </LinearLayout>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:fontFamily="@font/open_sans_bold"
                            android:text="Free shipping over $100"
                            android:textColor="#E53935"
                            android:textSize="16sp"
                            app:layout_constraintEnd_toStartOf="@id/btnAdd2"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/rowPrice2" />

                        <ImageView
                            android:id="@+id/btnAdd2"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/wishlistcarticon"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </LinearLayout>

                <!-- ===== ITEM 3 ===== -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_price_box"
                    android:padding="12dp"
                    android:layout_marginTop="16dp">

                    <ImageView
                        android:layout_width="90dp"
                        android:layout_height="130dp"
                        android:background="@drawable/product_tile_bg"
                        android:scaleType="centerCrop"
                        android:src="@drawable/wishlist3" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingStart="12dp">

                        <TextView
                            android:id="@+id/tvName3"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Dried Red Crushed Chilli Flakes 100% Organic Premium Quality"
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            android:fontFamily="@font/open_sans_bold"
                            android:maxLines="2"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toStartOf="@+id/btnRemove3"
                            app:layout_constraintTop_toTopOf="parent"/>

                        <ImageView
                            android:id="@+id/btnRemove3"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_close"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"/>

                        <LinearLayout
                            android:id="@+id/rowPrice3"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="8dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/tvName3">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="6dp"
                                android:fontFamily="@font/open_sans_bold"
                                android:text="$31"
                                android:textColor="@color/black"
                                android:textSize="24sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="12dp"
                                android:fontFamily="@font/open_sans_bold"
                                android:text="90 sold"
                                android:textColor="#8A000000"
                                android:textSize="16sp" />

                        </LinearLayout>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:fontFamily="@font/open_sans_bold"
                            android:text="Free shipping over $100"
                            android:textColor="#E53935"
                            android:textSize="16sp"
                            app:layout_constraintEnd_toStartOf="@id/btnAdd3"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/rowPrice3" />

                        <ImageView
                            android:id="@+id/btnAdd3"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/wishlistcarticon"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </LinearLayout>

                <!-- ===== ITEM 4 ===== -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_price_box"
                    android:padding="12dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="20dp">

                    <ImageView
                        android:layout_width="90dp"
                        android:layout_height="130dp"
                        android:background="@drawable/product_tile_bg"
                        android:scaleType="centerCrop"
                        android:src="@drawable/wishlist4" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingStart="12dp">

                        <TextView
                            android:id="@+id/tvName4"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Dried Bitter Gourd slices Organic Melon / Momordica charantia"
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            android:fontFamily="@font/open_sans_bold"
                            android:maxLines="2"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toStartOf="@+id/btnRemove4"
                            app:layout_constraintTop_toTopOf="parent"/>

                        <ImageView
                            android:id="@+id/btnRemove4"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_close"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"/>

                        <LinearLayout
                            android:id="@+id/rowPrice4"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="8dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/tvName4">


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="6dp"
                                android:fontFamily="@font/open_sans_bold"
                                android:text="$16"
                                android:textColor="@color/black"
                                android:textSize="24sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="12dp"
                                android:fontFamily="@font/open_sans_bold"
                                android:text="31 sold"
                                android:textColor="#8A000000"
                                android:textSize="16sp" />

                        </LinearLayout>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:fontFamily="@font/open_sans_bold"
                            android:text="Free shipping over $100"
                            android:textColor="#E53935"
                            android:textSize="16sp"
                            app:layout_constraintEnd_toStartOf="@id/btnAdd4"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/rowPrice4" />

                        <ImageView
                            android:id="@+id/btnAdd4"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/wishlistcarticon"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </LinearLayout>

            </LinearLayout>

            <!-- List container: we'll add/move/remove items here -->
            <LinearLayout
                android:id="@+id/listContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="8dp"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
